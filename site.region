<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="language" content="english">
  <meta http-equiv="content-type" content="text/html">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="description" content="Paper Mountain Post is a post-production film studio with locations in Toronto and Los Angeles.">
  <meta name="keywords" content="toronto post production, film post production, post production, adr, vo, voiceovers, sound design, foley, recording, colouring">
  <meta name=”robots” content=”index,follow”>
  <meta name="revisit-after" content="7 days">
  <meta name="distribution" content="web">
  <meta name=”robots” content=”noodp”>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/28144df9a9.js"></script>
  {squarespace-headers}
</head>
<body>

  <nav id="navigation">
    <squarespace:navigation navigationId="mainNav" template="navigation" />
  </nav>

  <main>
    <header id="header">
      <div class="header-logo">
          {@|apply header-logo.block}
      </div>
      <div class="header-content">

          <h1 class="site-title">{website.siteTitle}</h1>
          <h2 class="site-tagline">{website.siteTagLine}</h2>
          <nav class="header-navigation">
            <squarespace:navigation navigationId="mainNav" template="navigation" />
          </nav>
      
      </div>
    </header>

    
    <section id="services">
      <div class="container">

        <squarespace:block-field 
          id="section2-title"
          class="section-title" />

        <squarespace:block-field 
          id="section2-description" 
          class="section-description" />

        <squarespace:query collection="services">
          <div class="services-container mt-5">
            <ul class="services-list list-unstyled">
                {.repeated section items}
                  <li class="services-list-item">
                      <div class="service">
                        <img src="{assetUrl}"
                          class="service-image" />
                        <div class="service-content">
                          <h5 class="service-title">{title}</h5>
                          <p class="service-body">{body}</p>
                        </div>
                      </div>
                  </li>
                {.end}
              </ul>
          </div>
        </squarespace:query>

      </div>
    </section>

    <section id="works">
      <div class="container">

        <div class="row">
          <div class="col-md-3">

            <h3 class="section-title">
              <squarespace:block-field id="section5-title" columns="12"/>
            </h3>

          </div>
          <div class="col-md-9">

              <p class="section-description">
                <squarespace:block-field id="section5-description" columns="12"/>
              </p>

          </div>
        </div>

        <squarespace:query collection="works" category="episodic">
        <section class="episodic-container mt-5">
            <h3 class="works-title">Episodic</h3>
            <ul class="works-list list-unstyled">
              {.repeated section items}
                <li class="works-list-item">
                    <div class="work">
                      <img src="{assetUrl}"
                        alt="{title}"
                        class="work-image" />
                    </div>
                </li>
              {.end}
            </ul>
        </section>
        </squarespace:query>

        <squarespace:query collection="works" category="feature-film">
        <section class="episodic-container mt-5">
            <h3 class="works-title">Feature Films</h3>
            <ul class="works-list list-unstyled">
              {.repeated section items}
                <li class="works-list-item">
                    <div class="work">
                      <img src="{assetUrl}"
                        alt="{title}"
                        class="work-image" />
                    </div>
                </li>
              {.end}
            </ul>
        </section>
        </squarespace:query>

        <squarespace:query collection="works" category="short-film">
        <section class="episodic-container mt-5">
            <h3 class="works-title">Short Films</h3>
            <ul class="works-list list-unstyled">
              {.repeated section items}
                <li class="works-list-item">
                    <div class="work">
                      <img src="{assetUrl}"
                        alt="{title}"
                        class="work-image" />
                    </div>
                </li>
              {.end}
            </ul>
        </section>
        </squarespace:query>

      </div>
    </section>
    

    <section id="about">
      <div class="container">
        
        <h3 class="section-title">
          <squarespace:block-field id="section3-title" columns="12"/>
        </h3>
  
        <p class="section-description">
          <squarespace:block-field id="section3-description" columns="12"/>
        </p>

        <squarespace:query collection="team">
            <ul class="team-members-list mt-5">
              {.repeated section items}
              <li class="team-members-list-item list-unstyled">
                  <div class="team-member">
                    <div class="team-member-image-container">
                      <img src="{assetUrl}"
                        class="team-member-image" />
                      </div>
                      <div class="team-member-content">
                        <div class="team-member-name">{title}</div>
                        {.if customContent.position}
                        <div class="team-member-position">{customContent.position}</div>
                        {.end}
                        <div class="team-member-description">{body}</div>
                        {.if customContent.imdb}
                        <a href={customContent.imdb}
                          target="_blank"
                          class="team-member-link imdb">
                          <i class="fab fa-imdb"></i>
                        </a>
                        {.end}
                        {.if customContent.site}
                        <a href={customContent.site}
                          target="_blank"
                          class="team-member-link site">
                          <i class="fas fa-home"></i>
                        </a>
                        {.end}
                      </div>
                  </div>
              </li>
              {.end}
            </ul>
        </squarespace:query>
      </div>
    </section>

  </main>

  <footer id="footer">
    <div class="container">
      <div class="row">
        <div class="col-md footer-contact">

          <p class="footer-tagline">
            <squarespace:block-field id="footer-tagline" columns="12"/>
          </p>

          <squarespace:query collection="team">
          <ul class="contact-list list-unstyled m-0 mt-5 p-0">
            {.repeated section items}
              <li class="contacts-list-item">

                <div class="contact-name">{title}</div>
                
                {.if customContent.email}
                <a href="mailto:{customContent.email}"
                  class="contact-email d-block">
                  <i class="fas fa-envelope"></i>
                  <span class="ml-2">{customContent.email}</span>
                </a>
                {.end}

                {.if customContent.phone}
                <a href="tel:{customContent.phone}"
                  class="contact-phone d-block">
                  <i class="fas fa-phone"></i>
                  <span class="ml-2">{customContent.phone}</span>
                </a>
                {.end}

              </li>
            {.end}
          </ul>
          </squarespace:query>

        </div>
        <div class="col-md footer-end">

            <img src="assets/logo.svg"
              class="footer-logo" />
            <h1 class="footer-title">{website.siteTitle}</h1>
            <nav class="footer-navigation">
              <squarespace:navigation navigationId="mainNav" template="navigation" />
            </nav>

        </div>
      </div>
    </div>
  </footer>

  <squarespace:script src="navigation.js" combo="true"/>

  {squarespace-footers}
</body>
</html>
